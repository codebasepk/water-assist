<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:src="@drawable/drain_assist_for_package" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/image_view"
            android:background="#F76C30" />

        <TextView
            android:textColor="#F76C30"
            android:text="HOME"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginLeft="90dp"/>
        <TextView
            android:textColor="#1483C8"
            android:text="BUYER ASSIST"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginLeft="152dp"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="90dp">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Select Assistance :" />

           <RadioButton
                android:id="@+id/home_buyer_survey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Buyer Survey"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/home_buyer_drain_survey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Buyer Drain Survey"
                android:textSize="15dp" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_group"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/layout_et"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Details"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/plumbing_assist_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:layout_below="@+id/tv"
                android:textSize="15dp" />

        </RelativeLayout>

        <Button
            android:text="Submit"
            android:textColor="#F76C30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_et"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"/>
    </RelativeLayout>
